<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <title>Home</title>

    <style>
        .large-image {
            width: 100%; /* Adjust the percentage as needed */
            height: auto; /* Keep the aspect ratio */
        }

        .button-container {
            position: relative;
            height: 100%; /* Ensure the button is positioned relative to the full column height */
            display: flex;
            align-items: flex-end; /* Align button at the bottom */
            justify-content: flex-end; /* Align button to the right */
        }

        .custom-button {
            background-color: black; /* Button background color */
            color: white; /* Button text color */
            border: none; /* Remove border */
            width: 50%; /* Make button wide */
            padding: 10px 15px; /* Add padding for better appearance */
            border-radius: 20px; /* Optional: Rounded corners */
        }

        .custom-button:hover {
            background-color: #333; /* Darker shade for hover effect */
        }

        .table-container {
            margin-top: 30px;
        }

        img {
            width: 100px;
            height: 100px;
        }

        .product-name {
            text-align: center;
        }

        .product-name a {
            text-decoration:none;
            color: black;
            
        }

        .col a{
            text-decoration:none;
            color: white;
            
        }

        .login {
         
            text-align: center;
        }

        .login a {
            text-decoration:none;
            color: black;
            
        }

    </style>
</head>
<body>
    <%- include('partials/navbar.ejs') %>

    <!-- Container for the Image -->
    <div class="container my-5 d-flex justify-content-center">
        <img src="/images/Index.png" alt="Category Image" class="img-fluid large-image">
    </div>

    <!-- Content Section -->
    <div class="container">
        <div class="row">
            <div class="col-6">
                <p>
                    Are you looking for an outer or even accessories that have streetwear style? Or are you looking for furniture, phones, or anything at all? We got you!
                </p>
            </div>
            <div class="col">
                <!-- Button at the bottom right -->
                <div class="button-container">
                    <button class="custom-button">About Us</button>
                </div>
            </div>
        </div>

        
    </div>

    <div class="container table-container">
        <table class="table table-bordered">
            <!-- First row: Product Images -->
            <tr>
                <% products.forEach(product => { %>
                    <td class="text-center">
                        <img src="/images/<%= product.productImage %>" alt="<%= product.productName %>" class="product-image">
                    </td>
                <% }); %>
            </tr>

            <!-- Second row: Product Names -->
            <tr>
                <% products.forEach(product => { %>
                    <% if (user) { %>
                        <td class="product-name">
                            <a href="/product/<%= product.productId %>"><%= product.productName %></a>
                        </td>
                    <% } else { %>
                        <td class="login">
                            <a href="/login"><%= product.productName %></a>
                        </td>
                    <% } %>
                <% }); %>
            </tr>
            

            
            
        </table>

        <div class="col">
            <div class="button-container">
                <button class="custom-button"  style="width: 25%; margin-top: 20px;"><a href="/categories">See More</a></button>
            </div>
        </div>

      
    <%- include('partials/footer.ejs') %>
    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha384-ZvpUoO/+PpXQkZJt9AF6pSM/yIi+3lOsYO1kCvCde/eJ5N+8VsyT3CZ9z4v/s8" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>
